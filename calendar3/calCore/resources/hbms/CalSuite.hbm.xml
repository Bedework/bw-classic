<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- ===================================================================
                         Calendar Suites
     =================================================================== -->

<hibernate-mapping>
  <class name="org.bedework.calfacade.svc.BwCalSuite"
         table="bwcalsuites">
    <id name="id" type="integer" column="csid" unsaved-value="-1">
      <generator class="native"/>
    </id>

    <version name="seq" column="seq" type="integer" />

    <many-to-one name="creator"
                 class="org.bedework.calfacade.BwUser"
                 unique="true">
      <column name="creatorid" not-null="true" index="idx_calsuite_creator" />
    </many-to-one>

    <many-to-one name="owner"
                 class="org.bedework.calfacade.BwUser"
                 unique="true">
      <column name="ownerid" not-null="true"
              index="idx_calsuite_owner" unique-key="sponsor_key" />
    </many-to-one>

    <property name="access" column="bwaccess" type="text" />

    <property name="publick" type="true_false" >
      <column name="publick" not-null="true" />
    </property>

    <property name="name" column="csname" type="text" not-null="true"/>

    <many-to-one name="group"
                class="org.bedework.calfacade.svc.BwAdminGroup"
                column="groupid" not-null="true"
                index="csgroup" />

    <many-to-one name="rootCalendar"
                class="org.bedework.calfacade.BwCalendar"
                column="csrootcal"
                not-null="true"
                index="idx_csrootcal" />
  </class>

  <!-- =================================================================
                  Calendar suite queries
       ================================================================= -->

  <query name="getCalSuite"><![CDATA[
    from org.bedework.calfacade.svc.BwCalSuite cal
      where cal.name=:name
  ]]></query>

  <query name="getCalSuiteByGroup"><![CDATA[
    from org.bedework.calfacade.svc.BwCalSuite cal
      where cal.group=:group
  ]]></query>
</hibernate-mapping>

