<?xml version="1.0"?>

<!-- ===================================================================
     Copy the user caldav server properties from the global config
     properties file into common application build properties.

     All the admin property names start with caldav.user.
     The property names for the config process all start with propval.
     =================================================================== -->

<project name="bwpubcaldav.copyprops" default="copyprops" >
  <target name="copyprops">
    <property name="propval.war.name"
              value="${org.bedework.caldav.user.war.name}" />
    <property name="propval.ear.name"
              value="${org.bedework.caldav.user.ear.name}" />

    <property name="propval.env.prefix"
              value="${org.bedework.caldav.user.env.prefix}" />

    <property name="propval.app.description"
              value="${org.bedework.caldav.user.app.description}" />

    <property name="propval.app.security.domain"
              value="${org.bedework.caldav.user.app.security.domain}"/>
    <property name="propval.app.security.prefix"
              value="${org.bedework.caldav.user.app.security.prefix}"/>
    <property name="propval.app.transport.guarantee"
              value="${org.bedework.caldav.user.app.transport.guarantee}"/>

    <property name="propval.app.display.name"
              value="${org.bedework.caldav.user.app.display.name}" />
    <property name="propval.app.context.root"
              value="${org.bedework.caldav.user.context.root}" />
    <property name="propval.app.deploy.dir"
              value="${org.bedework.caldav.user.deploy.dir}" />
    <property name="propval.app.name"
              value="${org.bedework.caldav.user.app.name}" />
    <property name="propval.app.version"
              value="${org.bedework.caldav.user.app.version}" />

    <property name="propval.app.guestmode" value="false" />
  </target>
</project>
