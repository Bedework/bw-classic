<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- ===================================================================
     Object representing the sponsor of a public event
     =================================================================== -->

<hibernate-mapping>
  <class name="org.bedework.calfacade.BwSponsor"
         table="sponsors">
    <id name="id" type="integer" column="entityid" unsaved-value="-1">
      <generator class="native"/>
    </id>

    <version name="seq" column="seq" type="integer" />

    <many-to-one name="creator"
                 class="org.bedework.calfacade.BwUser"
                 unique="true">
      <column name="creatorid" not-null="true" index="idx_sp_creator" />
    </many-to-one>

    <many-to-one name="owner"
                 class="org.bedework.calfacade.BwUser"
                 unique="true">
      <column name="ownerid" not-null="true"
              index="idx_sp_owner" unique-key="sponsor_key" />
    </many-to-one>

    <property name="access" column="access" type="text" />

    <property name="publick" type="true_false" >
      <column name="publick" not-null="true" />
    </property>

    <property name="name" type="string" >
      <column name="name" not-null="true" unique-key="sponsor_key" />
    </property>
    <property name="phone" column="phone" type="string"/>
    <property name="email" column="email" type="string"/>
    <property name="link" column="link" type="string"/>

    <set name="events"
         lazy="true"
         inverse="true" >
      <key column="sponsorid"/>
      <one-to-many class="org.bedework.calfacade.BwEventObj" />
    </set>
  </class>

  <!-- =================================================================
       Sponsor queries
       ================================================================= -->

  <query name="getSponsorRefs"><![CDATA[
    select ev.id from org.bedework.calfacade.BwEventObj as ev
      where ev.sponsor = :ent
  ]]></query>
</hibernate-mapping>

