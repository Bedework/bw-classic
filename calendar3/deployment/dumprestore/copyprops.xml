<?xml version="1.0"?>

<!-- ===================================================================
     Copy the dump/restore properties from the global config
     properties file into common application build properties.

     All the dumprestore property names start with org.bedework.dumprestore
     The property names for the config process all start with
     propval.
     =================================================================== -->

<project name="bwdumprestore.copyprops" default="copyprops" >
  <target name="copyprops">
    <property name="propval.zip.name"
              value="${org.bedework.dumprestore.zip.name}" />

    <property name="propval.app.description"
              value="${org.bedework.dumprestore.description}" />

    <property name="propval.app.version"
              value="${org.bedework.dumprestore.version}" />

    <property name="propval.app.jdbcdriver.jar"
              value="${org.bedework.dumprestore.jdbcdriver.jar}" />
  </target>
</project>
