<?xml version="1.0"?>

<!-- ============= application common classes build Targets ============
     This is the ant build file for the common application classes for
     bedework.

     Authors: Mike Douglass   douglm@rpi.edu
     =================================================================== -->

<project name="bedework.appcommon" default="build">
  <property name="base.name" value="appcommon"/>

  <target name="init">
    <dirname property="this.dir" file="${ant.file}"/>
    <property name="source.home" location="${this.dir}/src"/>
  </target>

  <target name="build" depends="init"
          description="Compile UW calendar client common classes source">
    <!-- ==================== Sources and classes ====================== -->

    <fileset id="base.java.sources" dir="${source.home}" >
      <include name="org/bedework/appcommon/*.java"/>
    </fileset>

    <patternset id="base.class.patternset">
      <include name="org/bedework/appcommon/*.class"/>
    </patternset>

    <!-- ==================== Compilation Classpath ==================== -->

    <path id="compile.classpath">
      <pathelement location="${servlet.jar}"/>
      <pathelement location="${struts.jar}"/>
      <pathelement location="${ical4j.jar}"/>
      <pathelement location="${log4j.jar}"/>
      <pathelement location="${org.bedework.common.jar}"/>
      <pathelement location="${org.bedework.calsvci.jar}"/>
      <pathelement location="${org.bedework.calfacadeshared.jar}"/>
      <pathelement location="${org.bedework.ical.jar}"/>
      <pathelement location="${org.bedework.locale.jar}"/>
    </path>

    <!-- ==================== Build Target ============================= -->

    <property name="build.jar.file" location="${org.bedework.appcommon.jar}" />

    <ant antfile="${buildjar}" inheritRefs="true" target="build" />
  </target>
</project>
