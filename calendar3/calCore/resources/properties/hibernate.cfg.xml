<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration
    PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- ===================================================================
     Hibernate mapping for the bedework calendar suite.
     =================================================================== -->

<hibernate-configuration>
  <session-factory>
    <!-- these are defined in hibernate.properties
    <property name="query.substitutions">true 'T', false 'F', yes 'Y', no 'N'</property>
    <property name="connection.datasource">java:comp/env/jdbc/calDB</property>
    <property name="show_sql">false</property>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    -->

    <!-- Mapping files -->
    <mapping resource="AdminGroup.hbm.xml"/>
    <mapping resource="Alarm.hbm.xml"/>
    <mapping resource="Attendee.hbm.xml"/>
    <mapping resource="AuthUser.hbm.xml"/>
    <mapping resource="AuthUserPrefs.hbm.xml"/>
    <mapping resource="Calendar.hbm.xml"/>
    <mapping resource="Event.hbm.xml"/>
    <mapping resource="EventAnnotation.hbm.xml"/>
    <mapping resource="Filter.hbm.xml"/>
    <mapping resource="Category.hbm.xml"/>
    <mapping resource="Location.hbm.xml"/>
    <mapping resource="Organizer.hbm.xml"/>
    <mapping resource="Preferences.hbm.xml"/>
    <mapping resource="RecurrenceInstance.hbm.xml"/>
    <mapping resource="Sponsor.hbm.xml"/>
    <mapping resource="Subscription.hbm.xml"/>
    <mapping resource="SynchData.hbm.xml"/>
    <mapping resource="SynchInfo.hbm.xml"/>
    <mapping resource="SynchState.hbm.xml"/>
    <mapping resource="TimeZone.hbm.xml"/>
    <mapping resource="Todo.hbm.xml"/>
    <mapping resource="User.hbm.xml"/>
    <mapping resource="UserInfo.hbm.xml"/>
    <mapping resource="View.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
