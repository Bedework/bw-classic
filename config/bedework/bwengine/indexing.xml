<?xml version="1.0" encoding="UTF-8" ?>

<index-properties xmlns="http://bedework.org/ns/"
                  type="org.bedework.indexer.IndexPropertiesImpl">
  <account>admin</account>
  <skipPaths>/public/unbrowsable:/public/aliases:*/Outbox:*/Inbox:*/Deleted</skipPaths>
  <maxEntityThreads>5</maxEntityThreads>
  <maxPrincipalThreads>5</maxPrincipalThreads>

  <discardMessages>false</discardMessages>
  <indexPublic>true</indexPublic>
  <indexUsers>true</indexUsers>

  <solrCoreAdmin>admin/cores/</solrCoreAdmin>
  <publicIndexName>bwpublic</publicIndexName>
  <indexerConfig>@APPSERVER-CONF-DIR@/elasticsearch/mappings.json</indexerConfig>
  <indexerURL>localhost:9300</indexerURL>
  <userIndexName>bwuser</userIndexName>

  <embeddedIndexer>true</embeddedIndexer>
  <httpEnabled>false</httpEnabled>
  <dataDir>@APPSERVER-DATA-DIR@/elasticsearch/</dataDir>
</index-properties>
