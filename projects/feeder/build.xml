<project name="compile" default="build">
  <dirname property="subcomp.home" file="${ant.file}"/>

  <property name="source.home" location="${subcomp.home}/src"/>
  <property name="base.name" value="XXX"/>

  <target name="init">
    <dirname property="this.dir" file="${ant.file}"/>
  </target>

  <!-- ========================== Base build Targets ===================
       Here we have one target building the classes and interfaces that make
       up the calendar access control suite.
       None of these targets need to be invoked explicitly though you may
       wish to during development.
       ================================================================= -->

  <target name="build" depends="init">
    <!-- ==================== Sources and classes ====================== -->

    <fileset id="buildjar.java.sources" dir="${source.home}" >
      <include name="org/bedework/**/*.java"/>
    </fileset>

    <patternset id="base.class.patternset">
      <include name="org/bedework/**/*.class"/>
    </patternset>

    <!-- ==================== Build Target ============================= -->

    <ant antfile="${buildjar}" inheritRefs="true" target="build" />
  </target>
</project>
