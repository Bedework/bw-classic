<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- ===================================================================
     A calendar definition in UWCal.
     =================================================================== -->

<hibernate-mapping>
  <class name="org.bedework.calfacade.BwCalendar"
         table="calendars" lazy="false">
    <cache usage="read-write"/>
    <id name="id" type="integer" column="id" unsaved-value="-1">
      <generator class="native"/>
    </id>

    <version name="seq" column="seq" type="integer" />

    <many-to-one name="creator"
                 class="org.bedework.calfacade.BwUser"
                 unique="true">
      <column name="creatorid" not-null="true" index="cal_creator" />
    </many-to-one>

    <many-to-one name="owner"
                 class="org.bedework.calfacade.BwUser"
                 unique="true" >
      <column name="ownerid" not-null="true"
              index="cal_owner" />
    </many-to-one>

    <property name="access" column="access" type="text" />

    <property name="publick" type="true_false" >
      <column name="publick" not-null="true" />
    </property>

    <property name="name" column="name" type="text" not-null="true"/>
    <property name="path" column="path" type="text" not-null="true"
              index="calpath" unique="true" lazy="false" />
    <property name="summary" column="summary" type="text"/>
    <property name="description" column="description" type="text"/>
    <property name="mailListId" column="mail_list_id" type="text"/>
    <property name="calendarCollection" column="calendar_collection"
              type="true_false" not-null="true"/>

    <many-to-one name="calendar"
                 class="org.bedework.calfacade.BwCalendar">
      <column name="parent" />
    </many-to-one>

    <set name="children" inverse="true" cascade="all-delete-orphan"
         order-by="name" >
      <cache usage="read-write"/>
      <key column="parent" />
      <one-to-many class="org.bedework.calfacade.BwCalendar" />
    </set>
  </class>

  <!-- =================================================================
       calendar queries
       ================================================================= -->

  <!-- Calendars will be rooted in an entry with special names.
       Public calendars are rooted on "*PUBLIC*" and private calendars on
       ":USER:account,  e.g. :USER:douglm -->
  <query name="getNamedCalendars"><![CDATA[
    from org.bedework.calfacade.BwCalendar as cal
      where cal.name=:name
  ]]></query>

  <query name="getCalendarByPath"><![CDATA[
    from org.bedework.calfacade.BwCalendar as cal
      where cal.path=:path
  ]]></query>

  <query name="getCalendarById"><![CDATA[
    from org.bedework.calfacade.BwCalendar as cal
      where cal.id=:id
  ]]></query>

  <query name="getPublicCalendarCollections"><![CDATA[
    from org.bedework.calfacade.BwCalendar as cal
      where cal.calendarCollection=true and cal.publick=true
  ]]></query>

  <query name="getUserCalendarCollections"><![CDATA[
    from org.bedework.calfacade.BwCalendar as cal
      where cal.calendarCollection=true and cal.publick=false
  ]]></query>

  <query name="countCalendarEventRefs"><![CDATA[
    select count(*) from org.bedework.calfacade.BwEventObj as ev
      where ev.calendar = :cal
  ]]></query>
</hibernate-mapping>

