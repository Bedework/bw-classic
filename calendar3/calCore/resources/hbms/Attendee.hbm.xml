<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- ===================================================================
     Attendees
     =================================================================== -->

<hibernate-mapping>
  <class name="org.bedework.calfacade.BwAttendee"
         table="attendees">
    <id name="id" type="integer" column="attendeeid" unsaved-value="-1">
      <generator class="native"/>
    </id>

    <version name="seq" column="bwsequence" type="integer" />

    <many-to-one name="owner"
                 class="org.bedework.calfacade.BwUser"
                 unique="true" >
      <column name="ownerid" not-null="true" index="vattendees_user" />
    </many-to-one>

    <property name="cn" type="text"/>
    <property name="cuType" column="cutype" type="text"/>
    <property name="delegatedFrom" column="delegated_from" type="text"/>
    <property name="delegatedTo" column="delegated_to" type="text"/>
    <property name="dir" type="text"/>
    <property name="language" column="lang" type="text"/>
    <property name="member" type="text"/>
    <property name="rsvp" type="true_false"/>
    <property name="role" type="text"/>
    <property name="partstat" type="text"/>
    <property name="sentBy" column="sent_by" type="text"/>
    <property name="attendeeUri" column="attendee_uri" type="text"/>
  </class>
</hibernate-mapping>

